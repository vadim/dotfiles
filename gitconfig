# vim: set filetype=gitconfig:
[user]
    name = Vadim Patsalo
    email = patsalov@gmail.com

[alias]
    ci = commit -a
    co = checkout
    b  = branch
    p  = pull
    u  = push
    nb = checkout -b
    st = status
    ls = ls-files
    sl = stash list
    sa = stash apply
    sd = stash drop
    lo = log --pretty=oneline
    ff = flow feature
    fr = flow release
    fh = flow hotfix
    vd = difftool -y -t vimdiff
    undo-commit = reset --soft HEAD^
    unstage = reset HEAD --
    showtrackedignored = ls-files -i --exclude-standard
    last = log -1 HEAD

[mirror]
    summary = true

[apply]
    whitespace = nowarn

[color]
    branch      = auto
    diff        = auto
    status      = auto
    pager       = true
    interactive = auto

[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old  = red bold
    new  = green bold

[color "status"]
    added     = green
    changed   = yellow
    untracked = red

[push]
    default = tracking

[credential]
    helper = osxkeychain
[help]
    autocorrect = 1

[core]
    PreloadIndex = true
    editor = vim
